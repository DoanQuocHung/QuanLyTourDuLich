@page
@model WebForm.Pages.Shared.QuanLyPhanCong_SuaModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "_Layout";
}
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@using DTO;
@{
    var str = HttpContext.Session.GetString("editphancong");
    var obj = JsonConvert.DeserializeObject<PhanCongDTO>(str);
}
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Sửa Phân Công</h4>
                        <form class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputName1">Mã Đoàn</label>
                                <input type="text" class="form-control" asp-for="phancong.Id_Doan" value="@obj.Id_Doan" 
                                       placeholder="Mã Đoàn" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Mã Nhân Viên</label>
                                <input type="text" class="form-control" asp-for="phancong.Id_NV" value="@obj.Id_NV"
                                       placeholder="Mã Nhân Viên" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Nhiệm vụ</label>
                                <input type="text" class="form-control" asp-for="phancong.Nhiemvu" value="@obj.Nhiemvu" 
                                       placeholder="Nhiệm vụ">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Sửa</button>
                            <button class="btn btn-light">Hủy</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>