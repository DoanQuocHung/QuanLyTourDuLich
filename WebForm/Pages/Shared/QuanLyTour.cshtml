@page
@model WebForm.Pages.Pages.QuanLyTourModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "_Layout";

}
@using BUS;
@using DTO;
@using Microsoft.AspNetCore.Http;
@{
    List<TourDTO> list = new List<TourDTO>();
    List<LoaiTourDTO> listloai = new List<LoaiTourDTO>();
    TourBUS bus = new TourBUS();
    LoaiTourBUS busloai = new LoaiTourBUS();
    list = bus.List();
    listloai = busloai.List();
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách Tour</h4>
                        @{
                            try
                            {
                                if (HttpContext.Session.GetString("xoatour") == "thanhcong")
                                {
                                    <h5 style="background-color: forestgreen">Xóa thành công</h5>
                                    HttpContext.Session.Remove("xoatour");
                                }
                                else if (HttpContext.Session.GetString("xoatour") == "khongthanhcong")
                                {
                                    <h5 style="background-color: forestgreen">Không được xóa do vẫn còn trong tour</h5>
                                    HttpContext.Session.Remove("xoatour");
                                }

                            }
                            catch (Exception e) { }
                        }
                        <form class="form-inline">
                            <button type="button" class="btn btn-primary mb-2" onclick="btnclick()">
                                Thêm
                            </button>
                            <input type="text" class="form-control mb-2 mr-sm-2" style="margin-left:" id="inlineFormInputName2" placeholder="Tên Tour">
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã Tour</th>
                                        <th>Tên Tour</th>
                                        <th>Mô Tả</th>
                                        <th>Loại Tour</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (TourDTO item in list)
                                        {
                                            string tenloai = listloai.Find(x => x.Id_Loai.Equals(item.Id_Loai)).Ten_Loai;
                                            <tr>
                                                <td>@item.Id_Tour</td>
                                                <td>@item.Ten_Tour</td>
                                                <td>@item.Dacdiem_Tour</td>
                                                <td>@tenloai</td>
                                                <td>
                                                    <form method="post">
                                                    <input type="hidden" asp-for="tour.Id_Tour" value="@item.Id_Tour" />
                                                    <input type="hidden" asp-for="tour.Ten_Tour" value="@item.Ten_Tour" />
                                                    <input type="hidden" asp-for="tour.Dacdiem_Tour" value="@item.Dacdiem_Tour" />
                                                    <input type="hidden" asp-for="tour.Id_Loai" value="@item.Id_Loai" />
                                                    <input type="submit" asp-page-handler="edit" value="Sửa" class="btn btn-warning" />
                                                    <input type="submit" asp-page-handler="delete" value="Xóa" class="btn btn-danger" />
                                                    <input type="submit" asp-page-handler="detail" value="Chi tiết" class="btn btn-danger" />
                                                     </form>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

