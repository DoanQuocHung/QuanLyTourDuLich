@page
@model WebForm.Pages.Shared.QuanLyDoan_SuaModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "QuanLyDoan";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Thêm Đoàn</h4>
                        <form class="forms-sample">
                            <div class="form-group">
                                <label for="exampleInputName1">Mã Đoàn</label>
                                <input type="text" class="form-control" placeholder="Mã Đoàn">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Tên Đoàn</label>
                                <input type="text" class="form-control" placeholder="Tên Đoàn">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Mã Tour</label>
                                <input type="text" class="form-control" placeholder="Mã Tour">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ngày khởi hành</label>
                                <input type="text" class="form-control" placeholder="Ngày khởi hành">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ngày kết thúc</label>
                                <input type="text" class="form-control" placeholder="Ngày kết thúc">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Doanh thu</label>
                                <input type="text" class="form-control" placeholder="Doanh thu">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Nội dung</label>
                                <input type="text" class="form-control" placeholder="Nội dung">
                            </div>
                            <button type="submit" class="btn btn-primary mr-2">Sửa</button>
                            <button class="btn btn-light">Hủy</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>