}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách chi tiết Tour</h4>
                        <button type="button" class="btn btn-primary mb-2" onclick="btnclick()">
                            Thêm
                        </button>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Mã địa điểm</th>
                                        <th>Tên địa điểm</th>
                                        <th>Thứ tự</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Jacob</td>
                                        <td>53275531</td>
                                        <td>12 May 2017</td>
                                        <td>
                                            <input type="submit" value="Sửa" class="btn btn-warning" />
                                            <input type="submit" value="Xóa" class="btn btn-danger" />
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Messsy</td>
                                        <td>53275532</td>
                                        <td>15 May 2017</td>
                                        <td>
                                            <input type="submit" value="Sửa" class="btn btn-warning" />
                                            <input type="submit" value="Xóa" class="btn btn-danger" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Thống kê Tour</h4>
                        <input type="text" class="form-control mb-2 mr-sm-2" style="margin-left:" placeholder="Thời gian bắt đầu">
                        <input type="text" class="form-control mb-2 mr-sm-2" style="margin-left:" placeholder="Thời gian kết thúc">
                        <input type="submit" value="Tìm" class="btn btn-primary mr-2" />
                        <form class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputName1">Chi Phí Khách Sạn</label>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ăn Uống</label>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Phương Tiện</label>
                                <input type="text" class="form-control" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Doanh số</label>
                                <input type="text" class="form-control" placeholder="Loại Tour" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Số Đoàn Tham Gia</label>
                                <input type="text" class="form-control" placeholder="Mô Tả" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Tổng</label>
                                <input type="text" class="form-control" placeholder="Loại Tour" readonly>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>