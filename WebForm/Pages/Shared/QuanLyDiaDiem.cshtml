@page
@model WebForm.Pages.Shared.QuanLyDiaDiemModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "_Layout";
}

@using BUS;
@using DTO;
@{
    List<DiaDiemDTO> list_dd = new List<DiaDiemDTO>();
    DiaDiemBUS bus_dd = new DiaDiemBUS();
    list_dd = bus_dd.List();
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách Địa điểm</h4>
                        <form class="form-inline">
                            <button type="button" class="btn btn-primary mb-2" onclick="ThemDiaDiem()">
                                Thêm
                            </button>
                            <input type="text" class="form-control mb-2 mr-sm-2" style="margin-left:" id="inlineFormInputName2" placeholder="Tên Địa Điểm">
                        </form>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã Địa Điểm</th>
                                        <th>Tên Địa Điểm</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (DiaDiemDTO item in list_dd)
                                        {
                                            <tr>
                                                <td>@item.Id_DiaDiem</td>
                                                <td>@item.Ten_DiaDiem</td>
                                                <td>
                                                    <button type="button" class="btn btn-warning">Sửa</button>
                                                    <button type="button" class="btn btn-danger">Xóa</button>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>