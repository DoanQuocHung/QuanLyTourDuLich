@page
@model WebForm.Pages.Shared.QuanLyDiaDiemModel
@{
    ViewData["Title"] = "Website Quản Lý Tour";
    Layout = "_Layout";

}
@using BUS;
@using DTO;
@using Microsoft.AspNetCore.Http; 
@{
    List<DiaDiemDTO> list_dd = new List<DiaDiemDTO>();
    DiaDiemBUS bus_dd = new DiaDiemBUS();
    list_dd = bus_dd.List();
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách Địa Điểm</h4>
                        @{
                            try
                            {
                                if (HttpContext.Session.GetString("xoadiadiem") == "thanhcong")
                                {
                                    <h5 style="background-color: forestgreen">Xóa thành công</h5>
                                    HttpContext.Session.Remove("xoadiadiem");
                                }
                                else if (HttpContext.Session.GetString("xoadiadiem") == "khongthanhcong")
                                {
                                    <h5 style="background-color: forestgreen">Không được xóa do vẫn còn trong tour</h5>
                                    HttpContext.Session.Remove("xoadiadiem");
                                }

                            }
                            catch (Exception e) { }
                        }
                        <a class="btn btn-primary mb-2" asp-page="/Shared/QuanLyDiaDiem_Them">
                            Thêm
                        </a>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã Địa Điểm</th>
                                        <th>Tên Địa Điểm</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (DiaDiemDTO item in list_dd)
                                        {
                                            <tr>

                                                <td>@item.Id_DiaDiem</td>
                                                <td>@item.Ten_DiaDiem</td>
                                                <form asp- method="post">
                                                <td>
                                                    <input type="hidden" asp-for="diadiem.Id_DiaDiem" value="@item.Id_DiaDiem" />
                                                    <input type="hidden" asp-for="diadiem.Ten_DiaDiem" value="@item.Ten_DiaDiem" />
                                                    <input type="submit" asp-page-handler="edit" value="Sửa" class="btn btn-warning" />
                                                    <input type="submit" asp-page-handler="delete" value="Xóa" class="btn btn-warning" />
                                                </td>
                                                </form>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Form thêm -->
<dialog id="them-tour" style="display:none">
    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
        <h4>Thêm Tour</h4>
        <form class="pt-3">
            <div class="form-group">
                
                <input type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="ID Địa Điểm" >
            </div>
            <div class="form-group">
                <input type="text" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Tên Địa Điểm" >
            </div>
            <div class="mt-3">
                <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">
                    Thêm
                </a>
                <a class="btn btn-block btn-warning btn-lg font-weight-medium auth-form-btn">
                    Hủy
                </a>
            </div>
        </form>
    </div>
</dialog>